{% extends 'base.html.twig' %}

{% block body %}
    {% if packageInfo is not defined %}
        <h1>Repository<b>{{ repositoryName }}</b> does not exist!</h1>
    {% else %}
        <h1>{{ repositoryName }}</h1>
        <table  class="table table-striped">
            <thead>
            <tr>
                <th>Author</th>
                <th>Message</th>
                <th>Sha</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ repositoryCommitsInfo. }}</td>
                <td> {{ category }} </td>
                <td> {{ product.price }} </td>
                <td> {{ product.description }} </td>
            </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}